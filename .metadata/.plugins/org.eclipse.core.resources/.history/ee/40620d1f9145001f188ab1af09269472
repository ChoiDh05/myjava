	public User checkUserID(String id) {
		ArrayList<User> users = (ArrayList<User>) DBConnecter.Users.clone();
		
		for (int i = 0; i < users.size(); i++) {
			if(users.get(i).getId().equals(id)) {
				return users.get(i);
			}
		}
		return null;
	}
		
