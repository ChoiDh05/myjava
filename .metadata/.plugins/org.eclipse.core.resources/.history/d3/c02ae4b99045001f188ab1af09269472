package list.task2.user;

import java.util.Objects;

import list.task.food.Food;

public class User {
//	- 이름, 아이디, 비밀번호, 휴대폰번호
//	- private 접근자 사용
	private String name;
	private String userId;
	private String password;
	private String phoneNumber;

//	- 기본 생성자 선언
	public User() {
		;
	}

//	- 초기화 생성자는 사용하지 않는다(alt + shift + s, o)

//	public User(User user) {
//		this(user.getName(), user.getId(), user.getPassword(), user.getPhoneNumber());
//	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getId() {
		return id;
	}

	public void setId(String id) {
		this.id = id;
	}

	public String getPassword() {
		return password;
	}

	public void setPassword(String password) {
		this.password = password;
	}

	public int getPhoneNumber() {
		return phoneNumber;
	}

	public void setPhoneNumber(int phoneNumber) {
		this.phoneNumber = phoneNumber;
	}

	@Override
	public String toString() {
		return "User [name=" + name + ", id=" + id + ", password=" + password + ", phoneNumber=" + phoneNumber + "]";
	}

	@Override
	public int hashCode() {
		return Objects.hash(id, name, password, phoneNumber);
	}

	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		User other = (User) obj;
		return id.equals(other.id) && name.equals(other.name) && password.equals(other.password)
				&& phoneNumber == other.phoneNumber;
	}

}
